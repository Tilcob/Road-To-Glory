{
    "Commands": [
        {
            "YarnName": "set_flag",
            "Documentation": "Sets a boolean flag in the game state.",
            "Parameters": [
                { "Name": "flag", "Type": "string" },
                { "Name": "value", "Type": "bool" }
            ]
        },
        {
            "YarnName": "add_quest",
            "Documentation": "Adds a quest to the quest log.",
            "Parameters": [
                { "Name": "questId", "Type": "string" }
            ]
        },
        {
            "YarnName": "quest_step",
            "Documentation": "Triggers a quest step (type + questId).",
            "Parameters": [
                { "Name": "type", "Type": "string" },
                { "Name": "questId", "Type": "string" }
            ]
        },
        {
            "YarnName": "quest_start",
            "Documentation": "Starts a quest and registers it in the quest log.",
            "Parameters": [
                { "Name": "questId", "Type": "string" }
            ]
        },
        {
            "YarnName": "quest_stage",
            "Documentation": "Sets the current quest stage (zero-based).",
            "Parameters": [
                { "Name": "questId", "Type": "string" },
                { "Name": "stage", "Type": "number" }
            ]
        },
        {
            "YarnName": "quest_complete",
            "Documentation": "Marks a quest as completed.",
            "Parameters": [
                { "Name": "questId", "Type": "string" }
            ]
        },
        {
            "YarnName": "give_money",
            "Documentation": "Gives money to the player.",
            "Parameters": [
                { "Name": "amount", "Type": "number" }
            ]
        },
        {
            "YarnName": "give_item",
            "Documentation": "Gives an item to the player.",
            "Parameters": [
                { "Name": "itemId", "Type": "string" },
                { "Name": "amount", "Type": "number" }
            ]
        },
        {
            "YarnName": "inc_counter",
            "Documentation": "Increases a counter in the game state.",
            "Parameters": [
                { "Name": "counter", "Type": "string" },
                { "Name": "amount", "Type": "number" }
            ]
        },
        {
            "YarnName": "lock_player",
            "Documentation": "Locks the player in place.",
            "Parameters": []
        },
        {
            "YarnName": "unlock_player",
            "Documentation": "Unlocks the player.",
            "Parameters": []
        },
        {
            "YarnName": "camera_move",
            "Documentation": "Moves camera to (x,y) position. The time duration says how long it will take",
            "Parameters": [
                { "Name": "x Direction", "Type": "number" },
                { "Name": "y Direction", "Type": "number" },
                { "Name": "time duration", "Type": "number" }
            ]
        },
        {
            "YarnName": "camera_move_relative",
            "Documentation": "Moves camera relative to the player position. The time duration says how long it will take",
            "Parameters": [
                { "Name": "x Offset", "Type": "number" },
                { "Name": "y Offset", "Type": "number" },
                { "Name": "time duration", "Type": "number" }
            ]
        },
        {
            "YarnName": "camera_move_back",
            "Documentation": "Moves camera back to player position. The time duration says how long it will take",
            "Parameters": [
                { "Name": "time duration", "Type": "number" }
            ]
        },
        {
            "YarnName": "start_dialog",
            "Documentation": "Starts the dialogs from the *.yarn of the given npc.",
            "Parameters": [
                { "Name": "npc name", "Type": "string" },
                { "Name": "node title", "Type": "string" }
            ]
        },
        {
            "YarnName": "wait",
            "Documentation": "Waits a certain amount of time.",
            "Parameters": [
                { "Name": "time", "Type": "number" }
            ]
        },
        {
            "YarnName": "wait_for_camera",
            "Documentation": "Waits for the camera to finish movement.",
            "Parameters": []
        },
        {
            "YarnName": "wait_for_move",
            "Documentation": "Waits for the entity to finish movement.",
            "Parameters": []
        },
        {
            "YarnName": "move_to",
            "Documentation": "Moves an entity to a target position with an optional arrival distance.",
            "Parameters": [
                { "Name": "entity", "Type": "string" },
                { "Name": "x", "Type": "number" },
                { "Name": "y", "Type": "number" },
                { "Name": "arrival distance", "Type": "number" }
            ]
        },
        {
            "YarnName": "play_anim",
            "Documentation": "Plays an animation on an entity with an optional play mode.",
            "Parameters": [
                { "Name": "entity", "Type": "string" },
                { "Name": "animation type", "Type": "string" },
                { "Name": "play mode", "Type": "string" }
            ]
        },
        {
            "YarnName": "face",
            "Documentation": "Sets an entity facing direction.",
            "Parameters": [
                { "Name": "entity", "Type": "string" },
                { "Name": "direction", "Type": "string" }
            ]
        },
        {
            "YarnName": "fade_in",
            "Documentation": "Fades the screen in to full visibility.",
            "Parameters": [
                { "Name": "time duration", "Type": "number" }
            ]
        },
        {
            "YarnName": "fade_out",
            "Documentation": "Fades the screen out to black.",
            "Parameters": [
                { "Name": "time duration", "Type": "number" }
            ]
        },
        {
            "YarnName": "play_music",
            "Documentation": "Plays looping music by MusicAsset enum name.",
            "Parameters": [
                { "Name": "musicAsset", "Type": "string" }
            ]
        },
        {
            "YarnName": "play_sound",
            "Documentation": "Plays a sound effect by SoundAsset enum name.",
            "Parameters": [
                { "Name": "soundAsset", "Type": "string" }
            ]
        },
        {
            "YarnName": "play_indicator",
            "Documentation": "",
            "Parameters": [
                { "Name": "entity", "Type": "string" },
                { "Name": "indicatorType", "Type": "string" },
                { "Name": "duration", "Type": "number" }
            ]
        }
    ],
    "Functions": [
        {
            "YarnName": "quest_is_active",
            "Documentation": "Returns true if the given quest exists in the quest log and is currently in progress.",
            "Parameters": [
                { "Name": "questId", "Type": "string" }
            ],
            "ReturnType": "bool"
        },
        {
            "YarnName": "quest_is_completed",
            "Documentation": "Returns true if the given quest exists in the quest log and is marked as completed.",
            "Parameters": [
            { "Name": "questId", "Type": "string" }
            ],
            "ReturnType": "bool"
        },
        {
            "YarnName": "quest_stage",
            "Documentation": "Returns the current quest stage/step index (0-based). Returns -1 if the quest is unknown or not started.",
            "Parameters": [
                { "Name": "questId", "Type": "string" }
            ],
            "ReturnType": "number"
        },
        {
            "YarnName": "flag",
            "Documentation": "Returns the current value of a dialog/game flag for the player. Missing flags default to false.",
            "Parameters": [
                { "Name": "flag", "Type": "string" }
            ],
            "ReturnType": "bool"
        },
        {
            "YarnName": "counter",
            "Documentation": "Returns the current value of a named counter for the player. Missing counters default to 0.",
            "Parameters": [
                { "Name": "counter", "Type": "string" }
            ],
            "ReturnType": "number"
        },
        {
            "YarnName": "has_item",
            "Documentation": "Returns true if the player has at least one instance of the given itemId in their inventory (supports item id aliases).",
            "Parameters": [
                { "Name": "itemId", "Type": "string" }
            ],
            "ReturnType": "bool"
        }
    ]
}
